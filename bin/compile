#!/usr/bin/env bash

set -eo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
VENDOR_DIR="$BUILD_DIR/vendor"
PROFILE_PATH="$BUILD_DIR/.profile.d/libjq.sh"

mkdir -p $(dirname $PROFILE_PATH)
mkdir -p $VENDOR_DIR

function set-default-env (){
  echo "export $1=\$$1:/app/vendor/$2" >> $PROFILE_PATH
}

indent() {
  sed -u 's/^/       /'
}

set-default-env LD_LIBRARY_PATH "jq/lib"

curl -fsSL https://s3.amazonaws.com/chrismytton-public/jq-1.5-heroku.tar.gz | tar xzvf -
